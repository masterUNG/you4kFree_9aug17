<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="user.CheckTrueMoneyActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:background="@drawable/style_white_corner"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnTrueMoney"
            android:layout_width="532dp"
            android:layout_height="176dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="True money ใส่ตัวเลข 14 หลักบนบัตร"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" >

            <EditText
                android:id="@+id/edtTrueMoney_checkTrue"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:maxLength="14"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.12"
                android:textSize="13dp">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnConfirm_checkTrue"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_below="@+id/edtTrueMoney_checkTrue"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_green_corner"
                android:text="ยืนยัน"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="20dp"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>