<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4D000000">

    <LinearLayout
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/style_white_corner"
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="ใส่เบอร์มือถือ และ รหัสผ่าน เพื่อเข้าดูหนัง"
            android:textColor="#16a085"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:src="@drawable/ic_username"
                android:scaleType="centerInside"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/edtUsername_login"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#f1f2f2"
                android:ems="10"
                android:hint="โทรศัพท์มือถือ"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="15sp">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:src="@drawable/ic_lock"
                android:scaleType="centerInside"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <EditText
                android:id="@+id/edtPassword_login"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#f1f2f2"
                android:ems="10"
                android:hint="รหัสผ่านของคุณ"
                android:inputType="numberPassword"
                android:maxLength="10"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <CheckBox
                android:id="@+id/cbRemember"
                android:button="@drawable/selector_checkbox"
                android:checked="true"
                android:text=""
                android:background="@drawable/selector_green_corner"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:hint="กดเพื่อจดจำรหัสผ่าน"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_gravity="center_horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/btnLogin_login"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_green_corner"
            android:text="เข้าสู่ระบบ"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>
