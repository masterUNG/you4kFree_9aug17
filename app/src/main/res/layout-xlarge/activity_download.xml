<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#4D000000"
tools:context="com.royle.you4k.DownloadActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="10dp"
    android:background="@drawable/style_white_corner"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="Donwload Application"
        android:textColor="#e74c3c"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_belize_hole_corner"
            android:text="Name  :"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/bg_belize_hole_corner"
            android:text="EW902"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical|center_horizontal" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"

        android:textAppearance="?android:attr/textAppearanceLarge" >




        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_red_corner"
            android:text="Version  :"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:autoText="false"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="@drawable/bg_red_corner"
            android:text="@string/version_name"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center_vertical|center_horizontal" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/btnCheckUpdatesApp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_green_corner"
            android:text="Check Updates"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
