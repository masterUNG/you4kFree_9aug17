<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="user.CheckTrueMoneyActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:background="@drawable/style_white_corner"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnTrueMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_true"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="True money ใส่ตัวเลข 14 หลักบนบัตร"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edtTrueMoney_checkTrue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:inputType="number"
            android:maxLength="14">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnConfirm_checkTrue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/edtTrueMoney_checkTrue"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/selector_green_corner"
            android:text="ยืนยัน"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>